{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true, // Add this line to generate .d.ts files
    "declarationMap": true // Optional: Generates .d.ts.map files for better debugging
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
